# Dockerfile para o escravo de letras
FROM ubuntu:20.04

# instala dependÃªncias
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    g++ \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# copia arquivos
COPY CMakeLists.txt .
COPY include/ include/
COPY src/ src/

# compila
RUN mkdir build && cd build && \
    cmake .. && \
    make slave_letras

# porta 8081
EXPOSE 8081

# executa o escravo
CMD ["./build/bin/slave_letras"]
