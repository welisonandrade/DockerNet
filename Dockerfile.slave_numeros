# Dockerfile para o escravo de números
FROM ubuntu:20.04

# instala dependências
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    g++ \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# copia arquivos
COPY CMakeLists.txt .
COPY include/ include/
COPY src/ src/

# compila
RUN mkdir build && cd build && \
    cmake .. && \
    make slave_numeros

# porta 8082
EXPOSE 8082

# executa o escravo
CMD ["./build/bin/slave_numeros"]
